<rule id="THIS_AS_SUBJECT" name="This as subject">
 <pattern>
  <token inflected='yes' regexp='yes' postag='DT'>this|these</token>
  <token postag='VB.*' postag_regexp='yes' chunk_re='.*VP.*'></token>
